---
import BaseLayout from "@layouts/BaseLayout.astro";
import Avatar from "@components/Avatar.astro";
import Hero from "@components/Hero.astro";
import ProjectGrid from "@components/ProjectGrid.astro";
import Experience from "@components/Experience.astro";
import Education from "@components/Education.astro";
import Languages from "@components/Languages.astro";
const pageTitle = "Jacob Proffer â€“ Front-End Developer";
const heroHeadline = "Jacob Proffer";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="grid gap-3 md:gap-6">
    <div class="grid gap-3 md:grid-cols-[1fr_3fr] items-start md:gap-6">
      <Avatar />
      <Hero headline={heroHeadline}>
