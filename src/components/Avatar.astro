  /* Vignette and screen curve simulation */
  .crt-vignette {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      ellipse at center,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    pointer-events: none;
    z-index: 4;
  }

  /* Disable effects for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .crt-image {
      animation: none;
    }
    .crt-scanlines {
      animation: none;
    }
    .crt-flicker {
      animation: none;
    }
  }
</style>
