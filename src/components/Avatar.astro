---
import { Image } from "astro:assets";
import thumbnail from "@images/proffer_jacob.jpg";
---

<figure>
  <div
    class="h-full bg-linear-to-t from-dark-blue to-mid-blue p-3 border-black border border-t-highlight border-l-highlight"
  >
    <div class="relative border-black border aspect-square overflow-hidden">
      <div
        class="absolute z-20 h-full w-full motion-safe:animate-pulse outline-4 outline-light-blue -outline-offset-4 opacity-75"
      >
      </div>
      <div class="crt-container">
        <Image
          id="avatar-image"
          class="w-full h-full object-contain crt-image"
          src={thumbnail}
          alt=""
          widths={[144, 197, thumbnail.width]}
          sizes={`(max-width: 767px) 300px, (min-width: 768px) 197px, ${thumbnail.width}px`}
          quality="mid"
          loading="eager"
        />
        <!-- Scan lines -->
        <div class="crt-scanlines"></div>
        <!-- Flicker overlay -->
        <div class="crt-flicker"></div>
        <!-- Screen curve/vignette -->
        <div class="crt-vignette"></div>
      </div>
    </div>
  </div>
</figure>

<style>
  .crt-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .crt-image {
    filter: contrast(1.2) brightness(1.1);
    animation: textShadow 4s infinite;
  }

  /* Scan lines effect */
  .crt-scanlines {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0) 50%,
      rgba(0, 0, 0, 0.25) 50%
    );
    background-size: 100% 4px;
    pointer-events: none;
    z-index: 2;
    animation: scanlines 8s linear infinite;
  }

  @keyframes scanlines {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 0 100%;
    }
  }

  /* Subtle flicker effect */
  .crt-flicker {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.03);
    pointer-events: none;
    z-index: 3;
    animation: flicker 0.15s infinite;
  }

  @keyframes flicker {
