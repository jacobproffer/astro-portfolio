---
import { Image } from "astro:assets";
import thumbnail from "@images/proffer_jacob.jpg";
---

<figure>
  <div
    class="h-full bg-linear-to-t from-dark-blue to-mid-blue p-3 border-black border border-t-highlight border-l-highlight"
  >
    <div class="relative border-black border aspect-square overflow-hidden">
      <div
        class="absolute z-20 h-full w-full motion-safe:animate-pulse outline-4 outline-light-blue -outline-offset-4 opacity-75"
      >
      </div>
      <div class="relative w-full h-full">
        <Image
          id="avatar-image"
          class="w-full h-full object-contain contrast-[1.2] brightness-110 animate-[textShadow_4s_infinite] motion-reduce:animate-none"
          src={thumbnail}
          alt=""
          widths={[144, 197, thumbnail.width]}
          sizes={`(max-width: 767px) 300px, (min-width: 768px) 197px, ${thumbnail.width}px`}
          quality="mid"
          loading="eager"
        />
        <div
          class="absolute inset-0 w-full h-full pointer-events-none z-2 bg-[linear-gradient(to_bottom,rgba(255,255,255,0)_50%,rgba(0,0,0,0.25)_50%)] bg-size-[100%_4px] animate-[scanlines_8s_linear_infinite] motion-reduce:animate-none"
        >
        </div>
        <div
          class="absolute inset-0 w-full h-full pointer-events-none z-3 bg-white/3 animate-[flicker_0.15s_infinite] motion-reduce:animate-none"
        >
        </div>
        <div
          class="absolute inset-0 w-full h-full pointer-events-none z-4 bg-[radial-gradient(ellipse_at_center,rgba(0,0,0,0)_0%,rgba(0,0,0,0.3)_100%)]"
        >
        </div>
      </div>
    </div>
  </div>
</figure>

