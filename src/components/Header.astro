---
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import Container from "./Container.astro";
---

<div class="fixed z-20 top-0 w-full h-auto py-5" data-header>
  <Container>
    <div
      class="relative grid grid-cols-[max-content_max-content] items-center justify-between py-2 md:py-0"
    >
      <header>
        <a
          class="fixed -top-full left-1/2 -translate-x-1/2 transition-top ease-in-out delay-150 focus:top-0"
          href="#content">Skip to main content</a
        >
        <div class="w-[50px] h-[50px] block aspect-square">
          <Logo />
        </div>
      </header>
      <Navigation />
    </div>
  </Container>
</div>
