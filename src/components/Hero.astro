---
import Section from "./Section.astro";

interface Props {
  headline: string;
}

const { headline } = Astro.props;
---

<Section>
  <div class="h-full p-3">
    <div class="h-full p-3 bg-mid-blue border border-black">
      {
        headline && (
          <h1 class="font-medium text-xl leading-8 text-balance">{headline}</h1>
        )
      }
    </div>
  </div>
</Section>
