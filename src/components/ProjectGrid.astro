---
import Section from "@components/Section.astro";
import SecondaryHeadline from "@components/SecondaryHeadline.astro";
import Project from "@components/Project.astro";
import { getCollection } from "astro:content";

interface Props {
  headline: string;
}

const { headline } = Astro.props;

// Load projects from content collection
const projects = await getCollection("projects");
---

<Section>
  <SecondaryHeadline text={headline} />
  <ol class="grid gap-y-3 p-3">
    {
      projects.map((entry, index: number) => (
        <li class={index > 0 ? "border-t border-black" : ""}>
          <Project
            url={entry.data.url}
            headline={entry.data.title}
            description={entry.data.description ?? ""}
            tags={entry.data.tags ?? []}
            thumbnail={entry.data.thumbnail}
            thumbnailAlt={entry.data.title}
          />
        </li>
      ))
    }
  </ol>
</Section>
