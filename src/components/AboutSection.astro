---
import Section from "@components/Section.astro";
import TertiaryHeadline from "@components/TertiaryHeadline.astro";

interface Props {
  headline: string;
  secondaryHeadline?: string;
}

const { headline, secondaryHeadline } = Astro.props;
---

<Section headline={headline}>
  <div class="grid gap-3 bg-mid-blue p-3 border-black border">
    {secondaryHeadline && <TertiaryHeadline text={secondaryHeadline} />}
    <slot />
  </div>
</Section>
