---
import { SEO, type Props as SEOProps } from "astro-seo";
const defaultImageFile = new URL('/src/assets/images/social.jpg', Astro.url);

interface Props {
  seo?: SEOProps;
}

const { seo } = Astro.props;

const siteName = "Jacob Proffer";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<SEO
  title={seo?.title}
  description={seo?.description ?? "Jacob Proffer is a Senior Front-End Developer based in Marquette, Michigan. Currently working at Elegant Seagulls."}
  canonical={canonicalURL}
  noindex
  nofollow
  openGraph={{
    basic: {
      url: canonicalURL,
      title: seo?.title ?? "Jacob Proffer",
      type: "website",
      image: defaultImageFile.toString(),
    },
    image: {
      url: defaultImageFile.toString(),
      secureUrl: defaultImageFile.toString(),
      alt: '',
      height: 1200,
      width: 800,
    },
  }}
  extend={{
    meta: [
      {
        name: "og:locale",
        content: "en_US",
      },
      {
        name: "og:description",
        content: seo?.description ?? "Jacob Proffer is a Senior Front-End Developer based in Marquette, Michigan. Currently working at Elegant Seagulls.",
      },
      {
        name: "og:site_name",
        content: siteName,
      },
    ],
  }}
/>
