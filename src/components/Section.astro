---
import Container from "./Container.astro";
import SecondaryHeadline from "./SecondaryHeadline.astro";
import Circle from "./Circle.astro";

interface Props {
  headline: string;
  topSpacing?: boolean;
}

const { headline, topSpacing } = Astro.props;
---

<section class=`relative ${topSpacing ? 'mt-8' : ''}`>
  <Container>
    {
      headline && (
        <div class="flex items-center justify-between relative">
          <div>
            <SecondaryHeadline text={headline} />
          </div>
          <Circle />
        </div>
      )
    }
    <slot />
  </Container>
</section>
