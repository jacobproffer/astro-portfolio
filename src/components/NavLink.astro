---
const url = new URL(Astro.props.href, Astro.url);
const isExternal = url.host !== Astro.url.host;
const isCurrent = url.href === Astro.url.href;
---

<a
  class="relative block text-yellow transition-color ease-in-out duration-300 hover:text-white before:absolute before:bottom-1 before:left-0 before:w-[1ch] before:h-[1px] before:bg-white before:transition-width before:duration-300 before:ease-in-out hover:before:w-full focus:outline-dashed focus:outline-light-blue focus:outline-1 aria-[current='page']:text-light-blue aria-[current='page']:before:w-full aria-[current='page']:before:bg-light-blue"
  aria-current={isCurrent ? "page" : null}
  target={isExternal ? "_blank" : "_self"}
  {...Astro.props}
>
  <slot />
</a>
